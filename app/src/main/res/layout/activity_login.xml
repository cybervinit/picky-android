<?xml version="1.0" encoding="utf-8"?>

    
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.picky.picky.login.LoginActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        fancy:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/btnsStartGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        fancy:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/btnsEndGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        fancy:layout_constraintGuide_percent="0.9" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/loginBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        fancy:fb_defaultColor="@color/colorWhite"
        fancy:fb_focusColor="@color/colorBlack"
        fancy:fb_radius="5dp"
        fancy:fb_text="@string/google_signin"
        fancy:fb_textColor="@color/colorGrey"
        fancy:fb_textSize="20sp"
        fancy:layout_constraintTop_toBottomOf="@id/guideline"
        fancy:layout_constraintStart_toEndOf="@id/btnsStartGuideline"
        fancy:layout_constraintEnd_toStartOf="@id/btnsEndGuideline"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"/>

</android.support.constraint.ConstraintLayout>






