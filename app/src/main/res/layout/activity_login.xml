<?xml version="1.0" encoding="utf-8"?>

    
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.picky.picky.login.LoginActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        fancy:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:id="@+id/btnsStartGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        fancy:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/btnsEndGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        fancy:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/logoGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        fancy:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/picky_splash_icon"

        fancy:layout_constraintBottom_toTopOf="@+id/logoGuideline"
        fancy:layout_constraintStart_toEndOf="@id/btnsStartGuideline"
        fancy:layout_constraintEnd_toStartOf="@id/btnsEndGuideline"/>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/googleSignInBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        fancy:fb_defaultColor="@color/colorWhite"
        fancy:fb_focusColor="@color/colorGrey"
        fancy:fb_radius="5dp"
        fancy:fb_text=""
        android:contentDescription="Google logo"
        fancy:fb_textColor="@color/colorGrey"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingEnd="10dp"
        android:gravity="left"
        fancy:layout_constraintTop_toBottomOf="@id/guideline"
        fancy:layout_constraintStart_toEndOf="@id/btnsStartGuideline"
        fancy:layout_constraintEnd_toStartOf="@id/btnsEndGuideline">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/google_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"

                android:src="@drawable/google_logo"
                fancy:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/google_logo"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/google_signin"
                android:textSize="20sp"
                fancy:layout_constraintEnd_toEndOf="parent"
                fancy:layout_constraintStart_toEndOf="@+id/google_logo" />

        </android.support.constraint.ConstraintLayout>

    </mehdi.sakout.fancybuttons.FancyButton>

</android.support.constraint.ConstraintLayout>






