<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.picky.picky">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/picky_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/picky_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.example.picky.picky.PickyApplication">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".signup.SignupActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.picky.picky.action.NEW_USER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".phoneVerification.PhoneVerificationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.picky.picky.action.VERIFY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>